@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<br><br><br>

<div>
        <div class="row">
            @foreach (var item in @Model.Movies)
            {
                  // onclick="location.href='/ReviewMovie?id=@Model.FetchedMovie.Id'"
                <div class="column">
                    <h5 class="h5">@item.Title</h5>
                    <img class="titleLinq" onclick="location.href='/Movie?id=@item.Id'" src="@item.ImageURL" alt="Snow" style="width:50%">
                </div>
            }
        </div>
    </div>


<style>
* {
  box-sizing: border-box;
}

.column {
  float: left;
  width: 33.33%;
  padding: 5px;
}

/* Clearfix (clear floats) */
.row::after {
  content: "";
  clear: both;
  display: table;
}

.h5 {
  opacity: 5;
}
.titleLinq{
  transition-duration: 0.7s;
}
.titleLinq:hover {
  box-shadow: 0 20px 50px 0 rgb(100,0,0),0 13px 50px 0 rgba(255,0,0);
}
</style>
